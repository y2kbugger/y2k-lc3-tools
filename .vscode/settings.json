{
  // scm
  "git.showCommitInput": false,
  // testing
  "testing.openTesting": "openOnTestFailure",
  "python.testing.pytestArgs": [
    "y2klc3tools"
  ],
  // editor
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "always"
  },
  "notebook.formatOnSave.enabled": true,
  "github.copilot.editor.enableCodeActions": false,
  // python
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff"
  },
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.analysis.typeCheckingMode": "standard", // TODO: change this to strict eventually, also set in pyproject.toml for precommit
  "python.analysis.diagnosticMode": "openFilesOnly", // TODO: change this to workspace eventually
}
